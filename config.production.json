{
  "url": "https://your-domain.com",
  "server": {
    "port": 2368,
    "host": "0.0.0.0"
  },
  "database": {
    "client": "pg",
    "connection": {
      "connectionString": "postgresql://user:password@host:port/database",
      "ssl": { "rejectUnauthorized": false }
    }
  },
  "mail": {
    "transport": "SMTP",
    "options": {
      "service": "Mailgun",
      "host": "smtp.mailgun.org",
      "port": 587,
      "secure": false,
      "auth": {
        "user": "your-mailgun-smtp-user",
        "pass": "your-mailgun-smtp-password"
      }
    },
    "from": "noreply@your-domain.com"
  },
  "logging": {
    "transports": ["stdout"]
  },
  "process": "systemd",
  "paths": {
    "contentPath": "/var/lib/ghost/content"
  },
  "storage": {
    "active": "cloudinary-store",
    "cloudinary-store": {
      "useDatedFolder": false,
      "upload": {
        "use_filename": true,
        "unique_filename": false,
        "overwrite": false,
        "folder": "ghost-blog-cms",
        "tags": "blog,ghost-cms"
      },
      "fetch": {
        "quality": "auto",
        "secure": true,
        "cdn_subdomain": true
      }
    }
  },
  "imageOptimization": {
    "resize": false
  },
  "privacy": {
    "useTinybirdIntegration": true
  },
  "enableDeveloperExperiments": true,
  "editor": {
    "url": "https://your-domain.com/ghost/"
  }
}